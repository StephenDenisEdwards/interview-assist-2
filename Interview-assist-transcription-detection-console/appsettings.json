{
  "UI": {
    "BackgroundColor": "#1E1E1E",
    "IntentColor": "#FFFF00"
  },
  "Recording": {
    "Folder": "C:\\Users\\steph\\source\\repos\\interview-assist-2\\recordings",
    "FileNamePattern": "session-{timestamp}.jsonl",
    "AutoStart": true,
    "SaveAudio": true
  },
  "Transcription": {
    "AudioSource": "Loopback",
    "SampleRate": 16000,
    "BatchMs": 1500,
    "IncludeWordTimestamps": false,
    "Language": "en",

    "Mode": "Deepgram",
    "EnableContextPrompting": true,
    "ContextPromptMaxChars": 200,
    "VocabularyPrompt": "",

    "Basic": {
      "BatchMs": 3000,
      "MaxBatchMs": 6000
    },

    "Revision": {
      "OverlapMs": 1500,
      "BatchMs": 2000,
      "AgreementCount": 2,
      "SimilarityThreshold": 0.85
    },

    "Hypothesis": {
      "MinBatchMs": 500,
      "UpdateIntervalMs": 250,
      "StabilityIterations": 3,
      "StabilityTimeoutMs": 2000,
      "FlickerCooldownMs": 100
    },

    "Deepgram": {
      "Model": "nova-2",
      "InterimResults": true,
      "Punctuate": true,
      "SmartFormat": true,
      "EndpointingMs": 300,
      "UtteranceEndMs": 1000,
      "Keywords": "",
      "Vad": true,
      "Diarize": true
    },

    "IntentDetection": {
      "Enabled": true,
      "Mode": "Llm",
      "Heuristic": {
        "MinConfidence": 0.4
      },
      "Llm": {
        "Model": "gpt-5.2",
        "ConfidenceThreshold": 0.7,
        "RateLimitMs": 2000,
        "BufferMaxChars": 800,
        "ContextWindowChars": 1500,
        "TriggerOnQuestionMark": true,
        "TriggerOnPause": true,
        "TriggerTimeoutMs": 3000,
        "EnablePreprocessing": true,
        "EnableDeduplication": true,
        "DeduplicationWindowMs": 30000
      },
      "Deepgram": {
        "ConfidenceThreshold": 0.3,
        "CustomIntents": "ask a question,request clarification,seek explanation,inquire about something,ask for definition",
        "CustomIntentMode": "extended",
        "TimeoutMs": 5000
      }
    }
  },
  "Deepgram": {
    "ApiKey": ""
  },
  "QuestionDetection": {
    "Enabled": false,
    "Method": "Llm",
    "Model": "gpt-5.2",
    "ConfidenceThreshold": 0.7,
    "DetectionIntervalMs": 2000,
    "MinBufferLength": 50,
    "DeduplicationWindowMs": 30000,
    "EnableTechnicalTermCorrection": true,
    "EnableNoiseFilter": true
  },
  "Evaluation": {
    "Model": "gpt-5.2",
    "MatchThreshold": 0.7,
    "DeduplicationThreshold": 0.8,
    "OutputFolder": "C:\\Users\\steph\\source\\repos\\interview-assist-2\\evaluations",
    "DatasetsFolder": "evaluations/datasets",
    "BaselinesFolder": "evaluations/baselines",
    "ThresholdRange": {
      "Min": 0.3,
      "Max": 0.95,
      "Step": 0.05
    },
    "PromptVariants": []
  }
}
