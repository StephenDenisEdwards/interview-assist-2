{
  "Transcription": {
    "AudioSource": "Loopback",
    "SampleRate": 16000,
    "BatchMs": 1500,
    "IncludeWordTimestamps": false,
    "Language": "en",

    "Mode": "Deepgram",
    "EnableContextPrompting": true,
    "ContextPromptMaxChars": 200,
    "VocabularyPrompt": "",

    "Basic": {
      "BatchMs": 3000,
      "MaxBatchMs": 6000
    },

    "Revision": {
      "OverlapMs": 1500,
      "BatchMs": 2000,
      "AgreementCount": 2,
      "SimilarityThreshold": 0.85
    },

    "Hypothesis": {
      "MinBatchMs": 500,
      "UpdateIntervalMs": 250,
      "StabilityIterations": 3,
      "StabilityTimeoutMs": 2000,
      "FlickerCooldownMs": 100
    },

    "Deepgram": {
      "Model": "nova-2",
      "InterimResults": true,
      "Punctuate": true,
      "SmartFormat": true,
      "EndpointingMs": 300,
      "UtteranceEndMs": 1000,
      "Keywords": "",
      "Vad": true
    }
  },
  "Deepgram": {
    "ApiKey": ""
  },
  "QuestionDetection": {
    "Enabled": false,
    "Method": "Llm",
    "Model": "gpt-4o-mini",
    "ConfidenceThreshold": 0.7,
    "DetectionIntervalMs": 2000,
    "MinBufferLength": 50,
    "DeduplicationWindowMs": 30000,
    "EnableTechnicalTermCorrection": true,
    "EnableNoiseFilter": true
  }
}
